<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="icws.itinerary.VenueMap">

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/button"

        android:text="Third Floor"
        android:id="@+id/button"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="goThirdFloor"/>

    <Button

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/button"
        android:text="Fourth Floor"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="goFourthFloor"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="Seventh Floor"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/button"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="goSeventhFloor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Venue Map"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#000000"
        android:typeface="normal"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
